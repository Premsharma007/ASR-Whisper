

module.exports = {
  // The main menu that the user sees
  menu: [{
    // The "Install" button
    icon: "fa-solid fa-download",
    text: "Install",
    href: "install.js"
  }, {
    // The "Start" button
    icon: "fa-solid fa-rocket",
    text: "Start",
    href: "start.js" // This will run the 'start' steps below
  }],

  // Steps for the 'install' action
  install: [{
    // 1. Create a Python virtual environment to keep dependencies isolated
    method: "shell.run",
    params: {
      message: "python -m venv venv"
    }
  }, {
    // 2. Install all libraries from your requirements.txt file
    method: "shell.run",
    params: {
      // Use the virtual environment we just created
      venv: "venv",
      message: "pip install -r requirements.txt"
    }
  }, {
    
  }],

  // Steps for the 'start' action
  start: [{
    // 1. Run your Python script using the virtual environment
    method: "shell.run",
    params: {
      venv: "venv",
      // This command keeps the app running in the background
      daemon: true,
      message: "python Whisper.py" // Make sure 'app.py' is your script's name
    }
  }, {
    // 2. Open the Gradio web interface for the user
    method: "local.open",
    params: {
      // Default Gradio URL. Change if yours is different.
      url: "http://127.0.0.1:7860"
    }
  }]
}